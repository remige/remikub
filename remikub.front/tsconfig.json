{
    "compilerOptions": {
        "module": "esNext",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "jsx": "react",
        "lib": [
            "es2015",
            "dom"
        ],
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "./src/**/__tests__/*"
    ]
}